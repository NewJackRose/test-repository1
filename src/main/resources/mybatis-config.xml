<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration  
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"  
  "http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>
	<!-- 打印查询语句 -->
	<settings>
		<setting name="logImpl" value="STDOUT_LOGGING" />
	</settings>
	<!-- 全局别名设置，在映射文件中只需写别名，而不必写出整个类路径 -->
	<typeAliases>
		<typeAlias type="com.bkcomm.instructions_system.pojo.User"
			alias="User" />
		<typeAlias
			type="com.bkcomm.instructions_system.pojo.Account" alias="Account" />
		<typeAlias type="com.bkcomm.instructions_system.pojo.UserVO"
			alias="UserVO" />
		<typeAlias
			type="com.bkcomm.instructions_system.pojo.SecuBond" alias="SecuBond" />

	</typeAliases>
	<mappers>
		<mapper
			resource="com/bkcomm/instructions_system/mapping/UserMapper.xml" />
	</mappers>
</configuration> 